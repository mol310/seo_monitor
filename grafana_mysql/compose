version: '3.8'
volumes:
  grafana-mysql-data:
services:
  # Grafana dedicated storage
  #
  grafana-mysql:
    image: mysql:latest
    volumes:
      - grafana-mysql-data:/var/lib/postgresql/data
      - ./export:/var/export
      - ./initdb:/docker-entrypoint-initdb.d
    environment:
      - POSTGRES_PASSWORD=password
      - POSTGRES_USER=admin
      - POSTGRES_DB=grafana
    healthcheck:
        test: [ "CMD", "mysqladmin" ,"ping", "-h", "localhost" ]
        timeout: 45s
        interval: 10s
        retries: 10
  # Grafana Server
  #
  grafana:
    image: grafana/grafana
    depends_on:
        mysql-db:
            condition: service_healthy
    ports:
      - "3000:3000"
    environment:
      - GF_DATABASE_TYPE=mysql
      - GF_DATABASE_HOST=grafana-storage
      - GF_DATABASE_NAME=grafana
      - GF_DATABASE_USER=grafana
      - GF_DATABASE_PASSWORD=password


    # the below "command" is the portion after the image name in the run command:
    command: ["--config", "/snowplow/config/config.hocon"]
